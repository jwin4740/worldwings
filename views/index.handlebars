<h1>Flavors!</h1>

<h2>wings that are not hungry!</h2>

<ul>
  {{#each wings}}
    {{#unless this.hungry}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="hungry" value="true">
          <button type="submit">Rest TIME!</button>
        </form>

        {{> wings/delete-wing}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>wings that are hungry!</h2>

<ul>
  {{#each wings}}
    {{#if this.hungry}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="hungry" value="false">
          <button type="submit">Dinner Time!</button>
        </form>

        {{> wings/delete-wing}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Flavor</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Wing Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">hungry?</label><br>
    <input type="radio" name="hungry" value="1" checked> hungry!<br>
    <input type="radio" name="hungry" value="0"> Full
  </div>

  <button type="submit">Add Flavor</button>
</form>
