<!DOCTYPE html>
<div class="container">
	<h1> World Wings </h1>
	<div class="row">
		<div class="col-lg-12">
			<div id="mainAction">
				<h3> Enter some wing flavors</h3>
				<input id="userInput">
			</div>
		</div>
	</div>
</div>



<h2>Wings that are not eaten!</h2>

<ul>
  {{#each wings}}
    {{#unless this.devoured}}
      <li>
        {{this.wing_flavor}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">SLEEP TIME!</button>
        </form>

        {{> wings/delete-wing}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Wings that are eaten!</h2>

<ul>
  {{#each wings}}
    {{#if this.devoured}}
      <li>
        {{this.wing_flavor}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">WAKE UP!</button>
        </form>

        {{> wings/delete-wing}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a flavor</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Flavor:</label>
    <input type="text" id="ca" name="wing_flavor">
  </div>

  <div class="form-group">
    <label for="devoured">Hungry?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> hungry
  </div>

  <button type="submit">Add Flavor</button>
</form>
